<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#804CAF50"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtEdit"
        android:padding="10dp"
        android:textColor="#3F51B5"
        android:text="Sửa học sinh"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Tên"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/edtNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Email"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/edtEmailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Birth"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/edtBirthEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Home town"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/edtHomeTownEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableRow
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEditWork"
            android:text="Lưu"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnCancelEdit"
            android:text="Hủy"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>


</LinearLayout>